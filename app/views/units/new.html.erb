<%= form_for(@unit, html: { style: 'margin-bottom: 80px' }) do |f| %>
  <div class="row">
    <div class="span12">

      <div id="errors">
        <%= render('shared/error_messages', individuum: @unit) %>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>" style="margin: 8px"><%= value %></div>
        <% end %>
      </div>

      <div class="control-group">
        <%= f.label(:name, class: 'control-label') %>
        <div class="controls">
          <%= f.text_field(:name, class: 'input-block-level', maxlength: '20', placeholder: t('activerecord.attributes.unit.name')) %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:other, class: 'control-label') %>
        <div class="controls">
          <%= f.text_field(:other, class: 'input-block-level', maxlength: '20', placeholder: t('activerecord.attributes.unit.other')) %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:rule, class: 'control-label') %>
        <div class="controls">
          <%= f.select(:rule, Unit.rules.each_with_index.map { |r,i| [r, i] }) %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.button(t('views.units.save'), class: 'btn btn-primary', name: 'commit', id: 'commit') %>&nbsp;
        </div>
      </div>
    </div>
  </div>
<% end %>
