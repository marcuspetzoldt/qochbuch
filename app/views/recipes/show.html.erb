<div class="row">
  <div class="span4">
    <div class="well well-small" style="margin-bottom: 12px"><strong>Zubereitungszeit</strong></div>
    <p style="padding-left: 8px"><%= @recipe.time %> min</p>
    <div class="well well-small" style="margin-bottom: 12px"><strong>Schwierigkeit</strong></div>
    <p style="padding-left:8px"><%= Recipe.levels[@recipe.level] %></p>
    <div class="well well-small" style="margin-bottom: 12px"><strong>Autor</strong></div>
    <p style="padding-left:8px"><%= @recipe.user.name %></p>
    <div class="well well-small" style="margin-bottom: 12px"><strong>Bewertung</strong></div>
    <div style="padding-left: 8px">
      <p class="big"><%= render(partial: 'rating', locals: { display_only: true }) %></p>
      <p class="big" style="position: relative; left: 0; top: -30px; font-size: 200%; color: #bbb"><%= render(partial: 'rating', locals: { display_only: false }) %></p>
    </div>
  </div>
  <div class="span6">
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <% 3.times do |i| %>
        <div class="item<%= " active" if i==0 %>">
          <img src="<%= Recipe.image_name(@recipe, i+1) %>" alt="<%= "#{@recipe.title} Bild #{i+1}" %>" />
          <div class="container">
            <div class="carousel-caption">
              <%= i+1 %>/3
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->
  </div>
  <div class="span2">
    <% 3.times do |i| %>
      <div class="preview">
        <img src="<%= Recipe.image_name(@recipe, i+1) %>" alt="<%= "#{@recipe.title} Bild #{i+1} Vorschau" %>" />
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span4">
    <% if signed_in? %>
      <% if @recipe.user.id == current_user.id %>
        <%= link_to('Bearbeiten', edit_recipe_path(@recipe), class: "btn btn-success btn-block btn-large") %>
      <% end %>
    <% end %>
  </div>
  <div class="span8">
    <h2><%= @recipe.title %></h2>
    <p><em><%= @recipe.description %></em></p>
  </div>
</div>

<div class="row">
  <div class="span4">
    <h4>Zutaten für <select class="inline">
        <option>1</option>
        <option selected>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
      </select> Portionen
    </h4>
    <dl class="dl-horizontal">
      <dt>4 große</dt>
      <dd>Kartoffeln</dd>
      <dt>2 Zweige</dt>
      <dd>Rosmarin</dd>
      <dt>1 Zweig</dt>
      <dd>Thymian</dd>
      <dt>250 g</dt>
      <dd>Quark</dd>
      <dt>etwas</dt>
      <dd>Milch</dd>
      <dt></dt>
      <dd>Salz und Pfeffer</dd>
      <dt>2 EL</dt>
      <dd>Schnittlauch</dd>
    </dl>
  </div>
  <div class="span8">
    <h4>Zubereitung</h4>
    <%= render inline: @recipe.directions %>
  </div>
</div>
</div>

