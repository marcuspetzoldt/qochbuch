var form = $('<%=j render partial: 'users/signon' %>');
var signon = $('#signon');
if (signon.length) {
  signon.html(form)
} else {
  $('body').last().append(form)
}
$('#formSignon').hide().fadeIn(850);
$('#cancelSignon').click(function() {$('#formSignon').fadeOut(850)});
$('#commitSignon').click(function() {$('#formSignon').fadeOut(850)});
