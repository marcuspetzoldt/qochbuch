<div id="signon">
  <div class="container">
    <div class="row">
      <div id="formChangePassword" class="span6 offset3 img-rounded" style="position:fixed; top: 25%; border: 2px solid black; background-color: white;">
        <%= form_for(@user, html: { class: 'form-horizontal', style: 'padding-top: 20px' }, remote: true) do |f| %>

          <%= render 'shared/error_messages', individuum: @user %>
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>" style="margin: 8px"><%= value %></div>
          <% end %>

          <div class="control-group">
            <%= label_tag(:password, t('activerecord.attributes.user.old_password'), class: 'control-label') %>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon icon-user"></i></span>
                <%= password_field_tag(:password, params[:password], placeholder: t('activerecord.attributes.user.old_password')) %>
              </div>
            </div>
          </div>
          <div class="control-group">
            <%= f.label(:password, t('activerecord.attributes.user.new_password'), class: 'control-label') %>
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon icon-lock"></i></span>
                <%= f.password_field(:password, placeholder: t('activerecord.attributes.user.password.one')) %>
              </div>
            </div>
            <div class="control-label" />
            <div class="controls">
              <div class="input-prepend">
                <span class="add-on"><i class="icon icon-lock"></i></span>
                <%= f.password_field(:password_confirmation, placeholder: t('activerecord.attributes.user.password_confirmation.one')) %>
              </div>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= f.button(t('views.users.save'), class: 'btn btn-primary', id: 'commit', name: 'commit') %>
              &nbsp;<%= f.button(t('views.users.cancel'), class: 'btn', id: 'cancel', name: 'cancel') %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
