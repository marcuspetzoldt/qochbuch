/* Close User menu */
$("body").click()

/* Create Change Password Form */
var form = $('<%=j render partial: "users/change_password" %>')
var signon = $('#signon')
if (signon.length) {
  signon.html(form)
} else {
  $('body').last().append(form)
}
$('#formChangePassword').hide()
$('#cancel').click(function() {$('#formChangePassword').fadeOut(850)})
$('#commit').click(function() {$('#formChangePassword').fadeOut(850)})
$('#formChangePassword').fadeIn(850)
