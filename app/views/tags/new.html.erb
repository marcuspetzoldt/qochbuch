<%= form_for(@tag, html: { style: 'margin-bottom: 80px' }) do |f| %>
  <div class="row">
    <div class="span12">

      <div id="errors">
        <%= render('shared/error_messages', individuum: @tag) %>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>" style="margin: 8px"><%= value %></div>
        <% end %>
      </div>

      <%= f.hidden_field(:category, value: @tag.category) %>
      <div class="control-group">
        <%= f.label(:tag, moniker_from_category(@tag.category, 1), class: 'control-label') %>
        <div class="controls">
          <%= f.text_field(:tag, class: 'input-block-level', maxlength: '60', placeholder: moniker_from_category(@tag.category, 1)) %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label(:other, moniker_from_category(@tag.category, 2), class: 'control-label') %>
        <div class="controls">
          <%= f.text_field(:other, class: 'input-block-level', maxlength: '60', placeholder: moniker_from_category(@tag.category, 2)) %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.button(t('views.units.save'), class: 'btn btn-primary', name: 'commit', id: 'commit') %>&nbsp;
          <%= f.button(t('views.units.cancel'), class: 'btn', name: 'cancel', id: 'cancel') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
