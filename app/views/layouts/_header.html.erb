<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to(root_path, id: 'logo', class: 'brand') do %>
        <span style="color:yellow; font-weight:600">q</span>och<span style="color:yellow; font-weight:600">b</span>uch
      <% end %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><%= link_to(root_path) do %><i class="icon-home icon-white"></i>&nbsp;Home<% end %></li>
          <li id="userMenu"><%= render 'users/menu' %></li>
